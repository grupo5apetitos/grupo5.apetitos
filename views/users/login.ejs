<!DOCTYPE html>
<html lang="es-MX">
<!-- Parte del head -->
<%- include('../partials/head.ejs', { data: login }) %>
<body>
    <!-- Parte del header -->
    <%- include('../partials/header.ejs') %>
    <!-- Cuerpo de la Página-->
    <main>
        <div class="login">
            <form action="/usuarios/" method="post">
                <div class="group-form">
                    <img src="/images/icons/user.png" alt="Usuario">
                </div>
                <div class="group-form">
                    <label for="usuario">Correo</label>
                    <input type="text" class="text-box" name="email" id="usuario">
                </div>
                <div class="group-form">
                    <label for="password">Contraseña</label>
                    <input type="text" class="text-box" name="password" id="password">
                </div>
                <div class="group-form">
                    <input type="submit" class="btn" value="Iniciar Sesión">
                </div>
            </form>
        </div>
    </main>
    <!-- Parte del footer  -->
    <%- include('../partials/footer.ejs') %>
</body>
</html>