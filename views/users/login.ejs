<!DOCTYPE html>
<html lang="es-MX">
<!-- Parte del head -->
<%- include('../partials/head.ejs', { data: login }) %>
<body>
    <!-- Parte del header -->
    <%- include('../partials/header.ejs') %>
    <!-- Cuerpo de la Página-->
    <main>
        <div class="login">
            <form action="/usuarios/login" method="post">
                <div class="group-form">
                    <img src="/images/icons/user.png" alt="Usuario">
                </div>
                <div class="group-form">
                    <label for="email">Correo</label>
                    <input type="email" class="text-box" name="email" id="email">
                    <div class="text-error">
                        <span role="inputEmail" id ='emailErrors'></span>
                    </div>
                    <% if (locals.errors && errors.email) { %>
                        <p style="color: red;"><%= errors.email.msg %> </p>
                    <% } %>
                </div>
                <div class="group-form">
                    <label for="password">Contraseña</label>
                    <input type="password" class="text-box" name="password" id="password">
                    <div class="text-error">
                        <span role="inputPassword" id ='passwdErrors'></span>
                    </div>
                    <% if (locals.errors && errors.password) { %>
                        <p style="color: red;"><%= errors.password.msg %> </p>
                    <% } %>
                </div>
                <div class="group-form">
                    <button type="submit" class="btn" > Inicia sesion </button>
                </div> 
            </form>
        </div>
    </main>
    <!-- Parte del footer  -->
    <%- include('../partials/footer.ejs') %>
    <script src="../../js/user/loginUsuario.js"></script>
</body>
</html>