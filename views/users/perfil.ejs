<!DOCTYPE html>
<html lang="es-MX">
<!-- Parte del head -->
<%- include('../partials/head.ejs', { data: perfil }) %>
<body>
    <!-- Parte del header -->
    <%- include('../partials/header.ejs') %>
    <!-- Cuerpo de la página -->
    <section class="perfil">
        <form action="/usuarios/perfil/<%= (locals.userLogged && locals.userLogged.id_users)  ? locals.userLogged.id_users : null %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <h4>Perfil de <%= (locals.userLogged && locals.userLogged.name)  ? locals.userLogged.name : null %> </h4>
            <div class="form-module">
                <div class="group-input">
                    <img src="../../images/<%= (locals.userLogged && locals.userLogged.image)  ? locals.userLogged.image : null %> " alt="imagen de perfil">
                </div>
                <div class="group-input">
                    <label for="name">Nombre:</label>
                    <input type="text" name="name" id="name" class="text-box" 
                    value="<%= (locals.userLogged && locals.userLogged.name)  ? locals.userLogged.name : null %>">
                    <% if (locals.errors && errors.name) { %>
                    <div class="text-error">
                        <span><%= errors.user.msg %></span>
                    </div>
                    <% } %>
                </div>
                <div class="group-input">
                    <label for="lastname">Apellidos:</label>
                    <input type="text" name="lastname" id="lastname" class="text-box" 
                    value="<%= (locals.userLogged && locals.userLogged.last_name)  ? locals.userLogged.last_name : null %>">
                    <% if (locals.errors && errors.lastname) { %>
                    <div class="text-error">
                        <span><%= errors.lastname.msg %></span>
                    </div>
                    <% } %>
                </div>
                <div class="group-input">
                    <label for="email">Correo:</label>
                    <input type="email" name="email" id="email" class="text-box" 
                    value="<%= (locals.userLogged && locals.userLogged.email)  ? locals.userLogged.email : null %>">
                    <% if (locals.errors && errors.email) { %>
                    <div class="text-error">
                        <span><%= errors.email.msg %></span>
                    </div>
                    <% } %>
                </div>
                <div class="group-input">
                    <label for="password">Cambiar Contraseña:</label>
                    <input type="text" name="password" id="password" class="text-box">
                    <% if (locals.errors && errors.password) { %>
                    <div class="text-error">
                        <span><%= errors.password.msg %></span>
                    </div>
                    <% } %>
                </div>
                <div class="group-input">
                    <label for="image">Cambiar foto de perfil:</label>
                    <input accept="audio/*,video/*,image/*" type="file" name="image" id="image" class="text-box">
                    <% if (locals.errors && errors.image) { %>
                    <div class="text-error">
                        <span><%= errors.image.msg %></span>
                    </div>
                    <% } %>
                </div>
                <div class="group-input">
                    <button type="submit" class="btn">Guardar Cambios</button>
                </div>
            </div>
            <div>
                <a href="/usuarios/logout">Cerrar Sesion</a>
            </div>
        </form>
    </section>
    <!-- Parte del footer  -->
    <%- include('../partials/footer.ejs') %>
    <script src="../../js/user/perfilUsuario.js"></script>
</body>
</html>